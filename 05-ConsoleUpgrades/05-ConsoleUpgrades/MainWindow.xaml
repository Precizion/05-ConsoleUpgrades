<Window x:Class="_05_ConsoleUpgrades.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_05_ConsoleUpgrades"
        mc:Ignorable="d"
        Title="MainWindow" Height="171.8" Width="383.4">
    <Grid Height="150" VerticalAlignment="Top" Background="#FF0000">



        <TextBox x:Name="userInput" Margin="10,38,0,0" TextWrapping="Wrap" Text="Enter Birthday here" SelectionOpacity="0.3" Grid.ColumnSpan="4" HorizontalAlignment="Left" Width="218" Height="28" VerticalAlignment="Top" TextChanged="userInput_TextChanged">
            <TextBox.Effect>
                <DropShadowEffect Color="#FF1316EB"/>
            </TextBox.Effect>
        </TextBox>
        <Button x:Name="button" Content="Compute!" HorizontalAlignment="Left" Margin="251,38,0,0" VerticalAlignment="Top" Width="75" FontFamily="Sitka Display" FontSize="14.667" FontWeight="Bold" Click="button_Click"/>
        <Label x:Name="label" Content="What is your Birthday? (Enter date in format MM/DD/YYYY)" Margin="10,0,30.8,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="userBirthday" HorizontalAlignment="Left" Margin="10,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="41" Width="336"/>

    </Grid>
</Window>
